<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:layout_width="217dp"
        android:id="@+id/lat1"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="99dp"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="95dp"
        android:layout_marginRight="95dp"
        android:hint="Latitude"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/lon1"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lat1"
        android:inputType="numberDecimal"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="99dp"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="94dp"
        android:layout_marginRight="94dp"
        android:hint="Longitude"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/cal"
        android:layout_width="171dp"
        android:layout_height="69dp"
        android:layout_below="@+id/lon2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="124dp"
        android:layout_marginRight="124dp"
        android:onClick="calculate"
        android:text="calculate" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cal"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="125dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="129dp"
        android:layout_marginRight="129dp"
        android:text="Distance"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/location1"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="69dp"
        android:text="Location 1"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/location2"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lon1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="20dp"
        android:text="Location 2"
        android:textSize="20dp" />
    <EditText
        android:layout_width="217dp"
        android:id="@+id/lat2"
        android:inputType="numberDecimal"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="99dp"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="95dp"
        android:layout_marginRight="95dp"
        android:hint="Latitude"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/lon2"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lat2"
        android:inputType="numberDecimal"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="99dp"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="94dp"
        android:layout_marginRight="94dp"
        android:hint="Longitude"
        android:textColor="#000000"
        android:textSize="20sp" />

</RelativeLayout>